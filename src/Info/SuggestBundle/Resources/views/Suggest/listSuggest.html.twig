{% extends '::base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            {# left Menu start#}
            {{ include('InfoPageBundle:Default:leftMenu.html.twig') }}
            {# left Menu end#}

            <div class="col-md-7">
                {% for entity in entity %}
                    <h3>Автор: {{ entity.name }}</h3><br/>
                    {{ entity.message }}<br/>
                    <p class="pull-right" style="margin-right: 30px; color: #0d70b7">{{ entity.createdDate | date('d.m.Y') }}</p>
                {% endfor %}
            </div>
            {# right menu start  #}
            {{ include('InfoPageBundle:Default:rightMenu.html.twig') }}
            {# right menu end #}
        </div>
    </div>
{% endblock %}

