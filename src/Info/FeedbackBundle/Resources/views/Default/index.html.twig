                        {% set error_message = form_errors(form.phone)|striptags %}
                    {% endif %}
                    {{ form_widget(form.phone, {'attr':{'class':error ~ ' margin-none', 'title':error_message} }) }}
                    <div class="clear"></div>
                </div>
                <br>
                <div class="item">
                    <div class="textarea">
                        {{ form_widget(form.message, {'attr':{'cols':68, 'rows':20} }) }}
                    </div>
                </div>
                <br>
                <div class="item captcha-block">
                    {% set error = '' %}
                    {% set error_message = '' %}
                    {% if form.captcha.vars.errors|length %}
                        {% set error = 'error' %}
                        {% set error_message = form_errors(form.captcha)|striptags %}
                    {% endif %}
                    {{ form_widget(form.captcha, {'attr':{'class':error , 'title':error_message} }) }}
                    {{ form_widget(form.save, {'attr':{'class':'captcha_feedback'} }) }}
                    <div class="clear"></div>
                </div>
                {{ form_end(form) }}
