                    {% set error = '' %}
                    {% set error_message = '' %}
                    {% if form.email.vars.errors|length %}
                        {% set error = 'error' %}
                        {% set error_message = form_errors(form.email)|striptags %}
                    {% endif %}
                    {{ form_widget(form.email, {'attr':{'class':error ~ ' margin-none', 'title':error_message} }) }}

                    {% set error = '' %}
                    {% set error_message = '' %}
                    {% if form.phone.vars.errors|length %}
